<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/bg_card">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/ivProfileAvatar"
        android:layout_width="102dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Name label -->
    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/ivProfileAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Name value -->
    <TextView
        android:id="@+id/tvNameValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kyoka"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvNameLabel"
        app:layout_constraintStart_toStartOf="@id/tvNameLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Horizontal Row: School + Birthday -->
    <LinearLayout
        android:id="@+id/llSchoolBirthday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tvNameValue"
        app:layout_constraintStart_toStartOf="@id/tvNameValue"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- School Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School:"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvSchoolValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DLSU-M"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Birthday Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday:"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvBirthdayValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06-04-2003"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Course and Year Level -->
    <LinearLayout
        android:id="@+id/llBottomInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/llSchoolBirthday"
        app:layout_constraintStart_toStartOf="@id/llSchoolBirthday"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Course -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course:"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvCourseValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BSCS-ST"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Year Level -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year Level:"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvYearLevelValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="III"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
