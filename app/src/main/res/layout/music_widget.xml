<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="16dp"
    android:background="@drawable/music_widget"
    android:elevation="4dp"
    tools:backgroundTint="@color/vinyl_yellow">

    <ImageView
        android:id="@+id/widgetVinyl"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/vinyl_record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/widgetNowPlayingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Now Playing"
        android:textColor="@color/text_secondary"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/widgetVinyl"
        app:layout_constraintTop_toTopOf="@id/widgetVinyl" />

    <TextView
        android:id="@+id/widgetTrackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â™ª Brown Noise"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/widgetVinyl"
        app:layout_constraintStart_toStartOf="@id/widgetNowPlayingLabel"
        app:layout_constraintTop_toBottomOf="@id/widgetNowPlayingLabel" />

    <ImageView
        android:id="@+id/widgetPauseButton"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555" />

</androidx.constraintlayout.widget.ConstraintLayout>